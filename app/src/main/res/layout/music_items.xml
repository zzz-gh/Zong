<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:id="@+id/audioItem"
    android:layout_marginBottom="5dp"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/musicImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        android:padding="3dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        />

    <TextView
        android:id="@+id/musicFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/maring_medium_start"
        android:layout_marginTop="@dimen/margin_bottom_5"
        android:layout_toEndOf="@id/musicImg"
        android:text="Song name"
        android:singleLine="true"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary"
        android:layout_toStartOf="@id/menuMore"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="@dimen/ttt_size"
        android:layout_marginTop="@dimen/ll_top"
        android:layout_toEndOf="@id/musicImg"
        android:layout_marginStart="@dimen/maring_medium_start"
        android:layout_toStartOf="@id/menuMore"
        tools:textColor="@color/colorPrimary"
        android:textColor="@android:color/white"
        />
    
    <ImageView
        android:id="@+id/menuMore"
        android:layout_width="@dimen/l_width"
        android:layout_height="@dimen/l_width"
        android:src="@drawable/ic_more"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        />
