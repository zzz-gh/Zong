<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.AlbumDetailsActivity">
    <ImageView
        android:id="@+id/albumPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/music"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/gradient_bg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/recyclerViewAlbum"
        android:layout_marginTop="@dimen/margin_bottom_5"
        android:text="@string/album_lists"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tt_t_size"
        android:textStyle="italic"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/albumPhoto"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
</RelativeLayout>